{
  "name": "platformsh-docs",
  "version": "1.0.0",
  "description": "This repository holds the public user documentation for [Platform.sh](https://platform.sh/).",
  "main": "gulpfile.js",
  "author": "Platform.sh",
  "scripts": {
    "index": "hugo-algolia --config ./config/_default/params.yaml mysweetconfig.yaml -i \"content/en/**\" -o public/docs-index.json",
    "index-and-send": "hugo-algolia -s",
    "scss-build": "gulp scss",
    "scss-watch": "gulp watch",
    "hugo-watch-dev": "hugo server --watch --verbose --buildDrafts --cleanDestinationDir --disableFastRender",
    "hugo-watch-prod": "./hugo",
    "fetch-files": "rm -rf static/files/fetch/* && node static/scripts/fetch.js",
    "fetch-templates": "node static/scripts/fetch-templates.js",
    "registry-files": "node static/scripts/updateExampleConfigFiles.js",
    "dev": "npm run fetch-files && npm run fetch-templates && npm run registry-files && npm-run-all --parallel scss-watch hugo-watch-dev",
    "prod": "npm run fetch-files && npm run fetch-templates && npm run registry-files && npm run scss-build"
  },
  "devDependencies": {
    "browser-sync": "^2.24.7",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^5.0.0",
    "gulp-cache": "^1.0.2",
    "gulp-changed": "^3.1.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-htmlmin": "^4.0.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglifyjs": "^0.6.2",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-pngquant": "^5.1.0",
    "autoprefixer": "^9.0.0",
    "cssnano": "^4.0.3",
    "gulp-postcss": "^7.0.1",
    "npm-run-all": "^4.1.3",
    "platformsh-user-widget": "1.0.49",
    "pshregistry-parser": "1.1.1"
  },
  "dependencies": {
    "async": "^3.1.0",
    "hugo-algolia": "^1.2.14",
    "request-promise": "^4.2.5",
    "yaml-include": "^1.2.1"
  }
}
